{
    "app-id": "org.gnome.LightsOff",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.36",
    "sdk": "org.gnome.Sdk",
    "command": "lightsoff",
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc", "--socket=x11",
        /* Wayland access */
        "--socket=wayland",
        "--device=dri",
        "--metadata=X-DConf=migrate-path=/org/gnome/LightsOff/"
    ],
    "modules": [
        {
            "name": "lightsoff",
            "buildsystem": "meson",
            "sources": [{
                "type": "git",
                "url": "https://gitlab.gnome.org/GNOME/lightsoff.git",
                "tag": "3.36.0",
                "commit": "064870314de4c5ae5929a2476d6211ee48c5c0ce"
            }]
        }
    ]
}
